<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.appmaquitia" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Appmaquitia"
        android:usesCleartextTraffic="true"
        tools:targetApi="31" >
        <activity
            android:name=".Asociaciones"
            android:exported="false" />
        <activity
            android:name=".registro_de_asociacion_imagen"
            android:exported="false" />
        <activity
            android:name=".PublicacionesActivity"
            android:windowSoftInputMode="adjustResize"
            android:exported="false" />
        <activity
            android:name=".publicaciones"
            android:exported="false" />
        <activity
            android:name=".registro_de_asociacion"
            android:exported="false" />
        <activity
            android:name=".WalletActivity"
            android:exported="false"
            android:label="@string/title_activity_wallet"
            android:theme="@style/Theme.Appmaquitia" />
        <activity
            android:name=".CheckoutActivity"
            android:exported="false"
            android:label="@string/title_activity_checkout"
            android:theme="@style/Theme.Appmaquitia" /> <!-- This element is required to enable Google Pay in your app. -->
        <meta-data
            android:name="com.google.android.gms.wallet.api.enabled"
            android:value="true" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".registro"
            android:exported="false" />
        <activity
            android:name=".login"
            android:exported="false" />
        <activity
            android:name=".detallespago"
            android:exported="false" />
        <activity
            android:name=".pruebas"
            android:exported="false" />
        <activity
            android:name=".recover_password"
            android:exported="false" />
        <activity
            android:name=".password_changed"
            android:exported="false" />
        <activity
            android:name=".new_password"
            android:exported="false" />
        <activity
            android:name=".codigo_otp"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>