<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true"
    android:theme="@style/Theme.MaterialComponents.Light"
    app:cardPreventCornerOverlap="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:elevation="10dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.4">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/asociacion_logo"
                android:src="@drawable/asociaciones"
                android:padding="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">
            <TextView
                android:paddingTop="10dp"
                android:text="Nombre A.C"
                android:textAlignment="center"
                android:textSize="22dp"
                android:textColor="@color/turquesa"
                android:fontFamily="@font/urbanist_semibold"
                android:id="@+id/nombre_as"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.8" />
            <TextView
                android:textSize="16dp"
                android:text=" Manzanillo"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".7"
                android:textColor="@color/black"
                android:id="@+id/municipio_as"
                android:fontFamily="@font/urbanist_semibold"/>
            <TextView
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:text="Lider de asociaciÃ³n"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".7"
                android:id="@+id/representante_as"/>
            <TextView
                android:textAlignment="center"
                android:textColor="#9A9A9A"
                android:textSize="14dp"
                android:text="Telefono"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".7"
                android:id="@+id/num_telefono_as"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>