<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".codigo_otp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="20dp">

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@drawable/back"
                android:textSize="20dp"
                android:scaleType="fitCenter"
                android:padding="10dp"
                android:background="@drawable/backbutton"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Verificación OTP"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="35sp"
                app:fontFamily="@font/urbanist"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Revisa tu correo registrado e ingresa el código recibido"
                android:textAlignment="center"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp">

            <EditText
                android:id="@+id/et_codigo1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:hint="0"
                android:inputType="number"
                android:textColorHint="@color/gris_fuerte"
                android:textAlignment="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                style="@style/edittextStyle2"/>
            <EditText
                android:id="@+id/et_codigo2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:hint="0"
                android:inputType="number"
                android:textColorHint="@color/gris_fuerte"
                android:textAlignment="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                style="@style/edittextStyle2"/>
            <EditText
                android:id="@+id/et_codigo3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:inputType="number"
                android:hint="0"
                android:textColorHint="@color/gris_fuerte"
                android:textAlignment="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                style="@style/edittextStyle2"/>
            <EditText
                android:id="@+id/et_codigo4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:inputType="number"
                android:hint="0"
                android:textColorHint="@color/gris_fuerte"
                android:textAlignment="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                style="@style/edittextStyle2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_verificar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Verificar"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:background="@drawable/button_ini"
                app:fontFamily="@font/urbanist"
                android:layout_margin="15dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="¿No ha recibido el código?"
                android:textColor="@color/black"
                app:fontFamily="@font/urbanist_medium"
                android:textSize="15sp"/>
            <Button
                android:id="@+id/btn_reenviar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reenviar"
                android:textSize="15sp"
                android:textColor="@color/buttons"
                app:fontFamily="@font/urbanist"
                android:textStyle="bold"
                android:background="@drawable/button3_style"
                android:layout_margin="15dp"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>