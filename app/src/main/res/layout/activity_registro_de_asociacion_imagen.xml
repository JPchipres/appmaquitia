<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registro_de_asociacion_imagen"
    android:background="@color/gris">

    <Button
        android:id="@+id/btn_back"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/button_style"
        android:paddingStart="5dp"
        android:textSize="30sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titulo"
        android:layout_below="@+id/btn_back"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="30dp"
        android:text="Ahora solo carga una imagen para publicar tu asociacion!"
        android:textSize="34dp"
        android:textColor="@color/gris_oscuro"
        android:fontFamily="@font/urbanist_semibold"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/titulo"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        android:id="@+id/image">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/img_ejemplo">
            </ImageView>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:padding="20dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/turquesa"
                android:id="@+id/seleccionarimg"
                android:text="Seleccionar imagen.."
                >
            </androidx.appcompat.widget.AppCompatButton>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:id="@+id/ll_botones"
        android:layout_below="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/confirmarimg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/turquesa"
            android:text="Confirmar"/>
    </LinearLayout>

</RelativeLayout>