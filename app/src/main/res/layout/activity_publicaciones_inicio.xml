<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="4dp"
    tools:context=".publicaciones">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        app:srcCompat="@drawable/logo" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/logo"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:imeOptions="actionSearch"
        android:singleLine="true"
        android:background="@drawable/edittext_buscador"
        android:drawableStart="@drawable/search"
        android:drawableLeft="@drawable/search"
        android:drawablePadding="5dp"
        android:id="@+id/buscar"
        android:hint="Search" />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@+id/buscar"
            android:id="@+id/rv_asociaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp">
        </androidx.recyclerview.widget.RecyclerView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/navbar"
        android:layout_alignParentBottom="true"
        android:background="@drawable/nabvar_background"
        android:layout_marginEnd="0dp"
        app:menu="@menu/navbar_menu"
        app:itemIconSize="30dp"
        app:itemIconTint="@color/gris_medio"
        app:itemRippleColor="@color/white"
        app:labelVisibilityMode="unlabeled">
    </com.google.android.material.bottomnavigation.BottomNavigationView>
</RelativeLayout>



