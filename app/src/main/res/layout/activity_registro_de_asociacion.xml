<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registro_de_asociacion"
    android:background="@color/gris">

    <Button
        android:id="@+id/btn_back"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/button_style"
        android:paddingStart="5dp"
        android:textSize="30sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titulo"
        android:layout_below="@+id/btn_back"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="30dp"
        android:text="Cambia las vidas!\nIngresa los datos"
        android:textSize="34dp"
        android:textColor="@color/gris_oscuro"
        android:fontFamily="@font/urbanist_semibold"/>

    <EditText
        android:id="@+id/nombre"
        style="@style/Widget.Material3.TextInputEditText.FilledBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titulo"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/edit_text"
        android:textSize="16dp"
        android:fontFamily="@font/urbanist"
        android:hint="Nombre de la asociacion"/>
    <EditText
        android:id="@+id/cluni"
        style="@style/Widget.Material3.TextInputEditText.FilledBox.Dense"        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nombre"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/edit_text"
        android:textSize="16dp"
        android:fontFamily="@font/urbanist"
        android:hint="CLUNI"/>
    <EditText
        android:id="@+id/email"
        style="@style/Widget.Material3.TextInputEditText.FilledBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cluni"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/edit_text"
        android:textSize="16dp"
        android:fontFamily="@font/urbanist"
        android:hint="Email"/>
    <EditText
        android:id="@+id/contraseña"
        style="@style/Widget.Material3.TextInputEditText.FilledBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/edit_text"
        android:textSize="16dp"
        android:fontFamily="@font/urbanist"
        android:hint="Contraseña"/>
    <EditText
        android:id="@+id/confirmacion"
        style="@style/Widget.Material3.TextInputEditText.FilledBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/contraseña"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/edit_text"
        android:textSize="16dp"
        android:fontFamily="@font/urbanist"
        android:hint="Confirmar contraseña"/>

    <LinearLayout
        android:id="@+id/ll_botones"
        android:layout_below="@+id/confirmacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/busquedaDatos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="50dp"
            android:padding="20dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/turquesa"
            android:text="Buscar datos OSC"/>
        <Button
            android:id="@+id/registroAsociacion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="50dp"
            android:padding="20dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/turquesa"
            android:text="Registrar Asociación" />
    </LinearLayout>

</RelativeLayout>